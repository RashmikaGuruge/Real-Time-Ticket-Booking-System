<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.realtimeeventticketingsystem.controller.CustomerHomeController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #f7f9fc;">

    <HBox alignment="TOP_RIGHT" prefWidth="600.0">
        <Button text="Log Out" onAction="#logOut" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #4a90e2; -fx-font-weight: bold;"/>
    </HBox>

    <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="50.0" prefWidth="500.0">
        <Label text="Welcome to the Ticket Booking System"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4a90e2;"/>
        <Label text="Browse and book your tickets for upcoming events"
               style="-fx-font-size: 14px; -fx-text-fill: #4a4a4a;"/>
    </VBox>

    <ListView fx:id="eventListView" layoutX="50.0" layoutY="100.0" prefWidth="500.0" prefHeight="300.0"
              style="-fx-background-color: #ffffff; -fx-border-color: #d0d9e6; -fx-border-radius: 5; -fx-border-width: 1;"/>

</AnchorPane>
