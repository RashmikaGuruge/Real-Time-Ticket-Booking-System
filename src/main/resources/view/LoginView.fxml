<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.realtimeeventticketingsystem.controller.LoginController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #f7f9fc;">

    <children>
        <VBox alignment="CENTER" spacing="15.0" layoutX="100.0" layoutY="50.0" prefHeight="250.0" prefWidth="400.0" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #d0d9e6; -fx-border-radius: 10; -fx-border-width: 1;">

            <Label text="Ticket Booking System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4a90e2;" />

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Username:" prefWidth="80.0" style="-fx-font-size: 14px; -fx-text-fill: #4a4a4a;"/>
                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-pref-width: 250px; -fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #d0d9e6; -fx-border-radius: 5; -fx-font-size: 14px;"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Password:" prefWidth="80.0" style="-fx-font-size: 14px; -fx-text-fill: #4a4a4a;"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-pref-width: 250px; -fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #d0d9e6; -fx-border-radius: 5; -fx-font-size: 14px;"/>
            </HBox>

            <Button text="Login" onAction="#login" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120px; -fx-font-size: 14px; -fx-border-radius: 5;"/>

            <Hyperlink text="Do not have an account? Register Now" onAction="#goToRegister" style="-fx-font-size: 14px; -fx-text-fill: #4a90e2;"/>

            <Label fx:id="messageLabel" textFill="red" style="-fx-font-size: 12px;"/>
        </VBox>
    </children>
</AnchorPane>
