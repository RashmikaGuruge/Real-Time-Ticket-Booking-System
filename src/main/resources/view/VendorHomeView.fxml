<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.realtimeeventticketingsystem.controller.VendorHomeController"
      spacing="20" style="-fx-background-color: #f7f9fc; -fx-padding: 20;" prefHeight="500.0" prefWidth="600.0">

    <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 10;">
        <Button text="Log Out" onAction="#logOut" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #4a90e2; -fx-font-weight: bold;"/>
    </HBox>

    <VBox alignment="CENTER" spacing="10">
        <Label text="Welcome, Vendor!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4a90e2;"/>
        <Label text="Manage your events and profile" style="-fx-font-size: 14px; -fx-text-fill: #4a4a4a;"/>
    </VBox>

    <VBox spacing="15" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #d0d9e6; -fx-border-radius: 5; -fx-border-width: 1;">
        <Button text="Add Event" onAction="#addEvent" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200px; -fx-font-size: 14px; -fx-border-radius: 5;"/>
        <Button text="View Profile" onAction="#viewProfile" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200px; -fx-font-size: 14px; -fx-border-radius: 5;"/>
    </VBox>

</VBox>
